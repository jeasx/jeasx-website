:3000 {
    root * www
    file_server

    @assets {
        path *.*
    }

    header @assets {
        Cache-Control "public, max-age=31536000, immutable"
    }

    @html {
        path_regexp noext ^/[^.]+$
    }

    header @html {
        Content-Type "text/html; charset=utf-8"
    }

    handle_errors {
        rewrite * /{err.status_code}
        file_server
    }
}